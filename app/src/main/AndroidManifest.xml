<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ood.malissa.mangostudy" >


    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".Activities.ViewRooms"
            android:label="@string/title_activity_view_rooms" >
        </activity>
        <activity
            android:name=".Activities.RegisterClass"
            android:label="@string/title_activity_register_class" >
        </activity>
        <activity
            android:name=".Activities.ViewClasses"
            android:label="@string/title_activity_view_classes" >
        </activity>
        <activity
            android:name=".Activities.CreateGroup"
            android:label="@string/title_activity_create_group" >
        </activity>
        <activity
            android:name=".Activities.GroupChat"
            android:label="@string/title_activity_group_chat" >
        </activity>
        <activity android:name=".Activities.Login"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
